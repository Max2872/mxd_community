<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/commonRed">
        <ImageView
            android:id="@+id/top_bar_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/default_back"/>
        <TextView
            android:id="@+id/top_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="新建提醒"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/remindTimeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="庆祝日期："
        android:textColor="#aaa"
        android:textSize="17sp"/>
    <EditText
        android:id="@+id/remindTimeContent"
        style="?android:attr/textViewStyle"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/remindTimeDesc"
        android:layout_alignLeft="@+id/remindTimeDesc"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:inputType="textMultiLine"
        android:layout_marginRight="30dp"
        android:focusableInTouchMode="true" />
    <View
        android:id="@+id/remindTimeSeperate"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/remindTimeContent"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/remindTimeContent"
        android:layout_marginRight="20dp"
        android:background="@color/seperateBlack"/>
    <TextView
        android:id="@+id/remindDayDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remindTimeSeperate"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="提前几天："
        android:textColor="#aaa"
        android:textSize="17sp"/>
    <RadioGroup
        android:id="@+id/sex_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remindDayDesc"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/remindTimeSeperate"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7天"
            android:id="@+id/seven_rb"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天"
            android:id="@+id/three_rb"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天"
            android:id="@+id/one_rb"/>
    </RadioGroup>
    <View
        android:id="@+id/remindDaySeperate"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/sex_rg"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/remindTimeContent"
        android:layout_marginRight="20dp"
        android:background="@color/seperateBlack"/>
    <TextView
        android:id="@+id/remindRemarkDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remindDaySeperate"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="备注："
        android:textColor="#aaa"
        android:textSize="17sp"/>
    <EditText
        android:id="@+id/remindRemark"
        style="?android:attr/textViewStyle"
        android:background="@drawable/remind_corner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/remindRemarkDesc"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/remindRemarkDesc"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:inputType="textMultiLine"
        android:layout_marginRight="30dp"
        android:focusableInTouchMode="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/remindSave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@drawable/address_corner"/>
    </RelativeLayout>
</RelativeLayout>