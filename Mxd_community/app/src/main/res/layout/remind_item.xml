<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/celebrateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="庆祝日期：2018年05月20日"
        android:textColor="#444"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/earlyDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/celebrateTime"
        android:layout_alignLeft="@+id/celebrateTime"
        android:layout_marginTop="10dp"
        android:text="提前几天提醒：7天"
        android:textColor="#444"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/remarkDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earlyDays"
        android:layout_alignLeft="@+id/earlyDays"
        android:layout_marginTop="10dp"
        android:text="备注："
        android:textColor="#444"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/remarkContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/remarkDesc"
        android:layout_toRightOf="@+id/remarkDesc"
        android:text="情人节，和xxx的xxx天。"
        android:textColor="#444"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/remarkContent"
        android:layout_marginTop="10dp"
        android:background="#ccc"/>
</RelativeLayout>