<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/commonRed">
        <ImageView
            android:id="@+id/top_bar_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/default_back"/>
        <TextView
            android:id="@+id/top_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="支付结果"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/payResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="支付成功！"
        android:textColor="#333"
        android:textAlignment="center"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/logisticHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="我们会尽快为您发货！"
        android:textColor="#999"
        android:textAlignment="center"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/ensureBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logisticHint"
        android:layout_marginTop="20dp"
        android:text="知道了"
        android:textColor="#444"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_corner"/>
</RelativeLayout>