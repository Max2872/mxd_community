<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="商品："
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goods_desc"
        android:layout_toRightOf="@+id/goods_desc"
        android:layout_marginLeft="3dp"
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/price_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/goods_desc"
        android:layout_below="@+id/goods_desc"
        android:layout_marginTop="10dp"
        android:text="价格："
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/price_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/price_desc"
        android:layout_toRightOf="@+id/price_desc"
        android:layout_marginLeft="3dp"
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/receiver_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price_desc"
        android:layout_below="@+id/price_desc"
        android:layout_marginTop="10dp"
        android:text="收件人："
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receiver_desc"
        android:layout_toRightOf="@+id/receiver_desc"
        android:layout_marginLeft="3dp"
        android:textColor="@color/commonBlack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/logistics"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/receiver_desc"
        android:layout_below="@+id/receiver_desc"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="查物流"
        android:textColor="@color/commonBlack"
        android:textSize="13sp"
        android:background="@drawable/shape_corner"/>
    <TextView
        android:id="@+id/order_detail"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/logistics"
        android:layout_toRightOf="@+id/logistics"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="查看详情"
        android:textColor="@color/commonBlack"
        android:textSize="13sp"
        android:background="@drawable/shape_corner"/>
    <TextView
        android:id="@+id/order_service"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/order_detail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="售后"
        android:textColor="@color/commonBlack"
        android:textSize="13sp"
        android:background="@drawable/shape_corner"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/order_service"
        android:layout_marginTop="8dp"
        android:background="@color/seperateBlack"/>

</RelativeLayout>