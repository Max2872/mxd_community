<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="付款方式"
        android:textAlignment="center"
        android:textColor="#333"
        android:textSize="18sp" />
    <RelativeLayout
        android:id="@+id/walletLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTitle"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/walletMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="零钱支付"
            android:textColor="#333"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/walletMode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/goods_selected"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zfbLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walletLayout"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/zfbMode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="支付宝支付"
            android:textColor="#333"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zfbMode"
            android:layout_toRightOf="@+id/zfbMode"
            android:layout_marginLeft="20dp"
            android:text="暂不支持"
            android:textColor="#888"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/zfbMode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/goods_normal"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zfbLayout"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/wxMode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="微信支付"
            android:textColor="#333"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wxMode"
            android:layout_toRightOf="@+id/wxMode"
            android:layout_marginLeft="20dp"
            android:text="暂不支持"
            android:textColor="#888"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/wxMode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/goods_normal"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/ensureBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/wxLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/order_pay_corner"/>
</RelativeLayout>